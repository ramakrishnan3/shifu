{
  "name": "@visualbi/shifu",
  "version": "0.2.0-rc1",
  "description": "ShifuJS is a guided tour plugin, that helps you build great walkthroughs and tutorials for your components",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack": "webpack",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "gen-version": "node ./build/extractVersion.js",
    "clean-types": "rimraf ./dist/js ./dist/types",
    "dev": "npm run gen-version && rimraf ./dist/* && npm run build:types && npm run webpack -- --env.mode dev --watch",
    "prod": "npm run gen-version && rimraf ./dist/* && npm run build:types && npm run webpack -- --env.mode prod && npm run clean-types",
    "prepublishOnly": "npm run prod",
    "npm-publish-dry": "npm publish --access restricted --dry-run",
    "npm-publish": "npm publish --access restricted --tag alpha"
  },
  "author": "VisualBI Solutions Inc",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/popper.js": "^1.11.0",
    "babel-loader": "^8.0.4",
    "dts-bundle": "^0.7.3",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "popper.js": "^1.14.7",
    "rimraf": "^2.6.2",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4"
  }
}
